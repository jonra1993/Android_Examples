<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.e.jona.sonidos.MainActivity">

    <TextView
        android:id="@+id/tvtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Sonidos"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        />

    <ImageView
        android:id="@+id/imageViewer1"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:src="@mipmap/bocina"
        android:layout_marginBottom="20dp"
        />
    <ImageButton
        android:id="@+id/ibtnMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/player1"

        android:layout_marginBottom="20dp"
        />

    <ImageButton
        android:id="@+id/ibtnSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/player2"
        android:layout_margin="5dp"
        />

    <ImageView
        android:id="@+id/flecha"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:src="@mipmap/flecha"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/texto"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:gravity="center"
        />



</LinearLayout>
